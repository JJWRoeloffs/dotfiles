set nocompatible
set nu
set relativenumber
set ignorecase
set smartcase
set scrolloff=8
set sidescrolloff=5
set incsearch
set showmode
set showmatch
set hlsearch

syntax on
filetype on
filetype plugin on
filetype indent on

nnoremap i zzi
nnoremap I zzI
nnoremap a zza
nnoremap A zzA
nnoremap o zzo
nnoremap O zzO
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz
